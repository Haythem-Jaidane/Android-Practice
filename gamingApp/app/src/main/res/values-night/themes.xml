<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GamingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorOnBackground">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="email" parent="Base.Theme.GamingApp">
        <item name="android:drawableStart">@drawable/dark_email</item>
    </style>

    <style name="titleText" parent="Base.Theme.GamingApp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fullname" parent="Base.Theme.GamingApp">
        <item name="android:drawableStart">@drawable/dark_account</item>
    </style>

    <style name="password" parent="Base.Theme.GamingApp">
        <item name="android:drawableStart">@drawable/dark_lock</item>
        <item name="android:drawableEnd">@drawable/dark_eye</item>
    </style>

</resources>